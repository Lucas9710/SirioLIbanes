<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/counterView"
        android:layout_toStartOf="@id/counterView"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/artistView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:minLines="1"
            android:maxLines = "1"
            android:textStyle="bold"
            tools:text="Bon Jovi Bon Jovi Bon Jovi Bon Jovi Bon Jovi" />

        <TextView
            android:id="@+id/songView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:minLines="1"
            android:maxLines = "2"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="This left feels right This left This left feels right This left This left feels right This left This left feels right This left" />

    </LinearLayout>

    <TextView
        android:id="@+id/counterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/buttonsView"
        android:layout_toStartOf="@id/buttonsView"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/buttonsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonVoteUp"
            style="@style/AppTheme.Button"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="+" />

    </LinearLayout>
</RelativeLayout>